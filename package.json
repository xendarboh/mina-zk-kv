{
  "name": "@zk-kv/source",
  "version": "0.0.0",
  "license": "MIT",
  "scripts": {
    "build": "nx run-many --targets=lint,typecheck,build --configuration=development --projects=* --exclude=ui",
    "buildw": "npm run build -- --watch",
    "commit": "cz",
    "dev": "npm run build && nx run ui:serve:development",
    "link": "ln -sTfv ../dist/libs node_modules/@zk-kv",
    "postinstall": "npm run link && prisma generate",
    "seed": "NODE_OPTIONS='--es-module-specifier-resolution=node --no-warnings' ts-node --esm libs/prisma/seed.ts",
    "setup": "prisma generate && prisma migrate deploy && prisma db seed",
    "test": "nx run-many --targets=test",
    "testw": "npm run test -- --watch"
  },
  "private": true,
  "devDependencies": {
    "@nx/esbuild": "16.4.2",
    "@nx/eslint-plugin": "16.4.2",
    "@nx/jest": "16.4.2",
    "@nx/js": "^16.4.2",
    "@nx/linter": "16.4.2",
    "@nx/next": "^16.4.2",
    "@nx/node": "^16.4.2",
    "@nx/react": "16.4.2",
    "@nx/workspace": "16.4.2",
    "@testing-library/react": "14.0.0",
    "@types/express": "~4.17.13",
    "@types/jest": "^29.4.0",
    "@types/node": "18.14.2",
    "@types/react": "^18.2.14",
    "@types/react-dom": "18.2.6",
    "@typescript-eslint/eslint-plugin": "^5.58.0",
    "@typescript-eslint/parser": "^5.58.0",
    "babel-jest": "^29.4.1",
    "cz-conventional-changelog": "^3.3.0",
    "esbuild": "^0.17.17",
    "eslint": "^8.44.0",
    "eslint-config-next": "^13.4.7",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-import": "2.27.5",
    "eslint-plugin-jsx-a11y": "6.7.1",
    "eslint-plugin-react": "7.32.2",
    "eslint-plugin-react-hooks": "4.6.0",
    "jest": "^29.4.1",
    "jest-environment-jsdom": "^29.4.1",
    "jest-environment-node": "^29.4.1",
    "nx": "16.4.2",
    "prettier": "^2.6.2",
    "prisma": "^4.16.2",
    "ts-jest": "^29.1.0",
    "ts-node": "10.9.1",
    "typescript": "~5.1.3",
    "verdaccio": "^5.0.4"
  },
  "dependencies": {
    "@prisma/client": "^4.16.2",
    "@trpc/client": "^10.33.0",
    "@trpc/server": "^10.33.0",
    "autoprefixer": "^10.4.14",
    "express": "~4.18.1",
    "next": "^13.4.7",
    "postcss": "^8.4.24",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "snarkyjs": "^0.11.3",
    "superjson": "^1.12.4",
    "tailwindcss": "^3.3.2",
    "tslib": "^2.3.0",
    "zod": "^3.21.4"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "nx": {
    "includedScripts": []
  },
  "prisma": {
    "schema": "libs/prisma/schema.prisma",
    "seed": "npm run seed"
  }
}
